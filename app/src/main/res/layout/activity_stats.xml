<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    tools:context=".StatsActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/linearLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/stats"
            android:id="@+id/stats"
            android:textSize="25sp"
            android:layout_marginStart="10dp"
            android:gravity="start"/>
        <View
            android:layout_width="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_height="3dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@android:color/darker_gray"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/max_players"
                android:id="@+id/max_players"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:gravity="center|start"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/max_over"
                android:id="@+id/max_over"
                android:layout_weight="1"
                android:layout_marginEnd="10dp"
                android:gravity="center|end"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/Team1_name"
            android:id="@+id/Team1_name"
            android:layout_marginTop="20dp"
            android:textSize="30dp"
            android:layout_gravity="center_horizontal"
            android:gravity="fill_horizontal|center"/>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/Team1_score"
                android:id="@+id/Team1_score"
                android:textSize="20dp"
                android:layout_weight="1"
                android:gravity="center"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/Team1_ball"
                android:id="@+id/Team1_ball"
                android:textSize="20dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:gravity="center"/>
        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Team1_btn"
            android:id="@+id/Team1_btn"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_marginTop="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/Team2_name"
            android:id="@+id/Team2_name"
            android:textSize="30dp"
            android:layout_gravity="center_horizontal"
            android:gravity="fill_horizontal|center"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/Team2_score"
                android:id="@+id/Team2_score"
                android:textSize="20dp"
                android:layout_weight="1"
                android:gravity="center"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/Team2_ball"
                android:id="@+id/Team2_ball"
                android:textSize="20dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:gravity="center"/>
        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Team2_btn"
            android:id="@+id/Team2_btn"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_marginTop="15dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_alignParentEnd="true">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/new_match"
            android:id="@+id/new_match"
            android:layout_marginTop="15dp"
            android:layout_gravity="right"
            android:layout_weight="2"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:gravity="center"
            />/>


    </LinearLayout>
</RelativeLayout>